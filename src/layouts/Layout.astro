---
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/code.svg" />
    <link
      href="https://fonts.cdnfonts.com/css/cascadia-code"
      rel="stylesheet"
    />
    <title>{title}</title>
    <style>
      body {
        font-family: 'Cascadia Code', monospace;
      }
    </style>
  </head>
  <body class="bg-black">
    <slot />
  </body>
</html>
